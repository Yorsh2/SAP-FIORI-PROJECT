<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="UpdateUserDialog" title="Actualizar Usuario" draggable="true" resizable="true" contentWidth="400px">
    <VBox id="UpdateUserVBox" class="sapUiSmallMargin">
      <Text id="UpdateUser_InfoText" text="Esta acción actualizará los datos del usuario seleccionado." />
    </VBox>
    <beginButton>
      <Button id="UpdateUser_ConfirmBtn" text="Actualizar" type="Emphasized" press=".onConfirmUpdate"/>
    </beginButton>
    <endButton>
      <Button id="UpdateUser_CancelBtn" text="Cancelar" press=".onCancelUpdate"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
