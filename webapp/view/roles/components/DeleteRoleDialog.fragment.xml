<!-- DeleteRoleDialog.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog
    id="DeleteRoleDialog"
    title="Confirmar eliminación"
    draggable="true"
    resizable="true"
    type="Message"
    state="Warning">
    
    <VBox
      id="DeleteRoleDialog_vbox"
      class="sapUiSmallMargin">
      <Text
        id="DeleteRole_ConfirmText"
        text="¿Estás seguro de que deseas eliminar este rol?" />
    </VBox>

    <beginButton>
      <Button
        id="DeleteRole_btnDeleteConfirm"
        text="Eliminar"
        type="Reject"
        press=".onConfirmDelete" />
    </beginButton>

    <endButton>
      <Button
        id="DeleteRole_btnDeleteCancel"
        text="Cancelar"
        press=".onCancelDelete" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>
