<mvc:View
    controllerName="com.ccnay.jagsapinv.sapfiori.controller.Roles.pages.RolesMainTable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:tnt="sap.ui.core"
    xmlns:tl="sap.ui.table"
>
    <tl:Table
        id="IdTable1RolesMainTable"
        rows="{/roles/PRIVILEGES}"
        selectionMode="Single"
        alternateRowColors="true"
        selectionBehavior="RowOnly"
        enableSelectAll="false"
        enableColumnReordering="true"
        rowActionCount="2"
        busyIndicatorDelay="0"
    >
        <tl:columns>
            <tl:Column
                id="IdColumnRoleIdRoles"
                sortProperty="ROLEID"
                width="10rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelRoleIdRoles"
                    text="ID del Rol"
                />
                <tl:template>
                    <m:Text
                        id="IdTextRoleIdRoles"
                        text="{/roles/ROLEID}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>

            <tl:Column
                id="IdColumnRoleNameRoles"
                sortProperty="ROLENAME"
                width="15rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelRoleNameRoles"
                    text="Nombre del Rol"
                />
                <tl:template>
                    <m:Text
                        id="IdTextRoleNameRoles"
                        text="{/roles/ROLENAME}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>

            <tl:Column
                id="IdColumnDescriptionRoles"
                sortProperty="DESCRIPTION"
                width="20rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelDescriptionRoles"
                    text="DescripciÃ³n"
                />
                <tl:template>
                    <m:Text
                        id="IdTextDescriptionRoles"
                        text="{/roles/DESCRIPTION}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>

            <tl:Column
                id="IdColumnActiveRoles"
                sortProperty="ACTIVED"
                width="5rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelActiveRoles"
                    text="Activo"
                />
                <tl:template>
                    <m:Text
                        id="IdTextActiveRoles"
                        text="{/roles/DETAIL_ROW/ACTIVED}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>

            <tl:Column
                id="IdColumnDeletedRoles"
                sortProperty="DELETED"
                width="5rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelDeletedRoles"
                    text="Eliminado"
                />
                <tl:template>
                    <m:Text
                        id="IdTextDeletedRoles"
                        text="{/roles/DETAIL_ROW/DELETED}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>

            <tl:Column
                id="IdColumnProcessIdRoles"
                sortProperty="PROCESSID"
                width="20rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelProcessIdRoles"
                    text="ID Proceso"
                />
                <tl:template>
                    <m:Text
                        id="IdTextProcessIdRoles"
                        text="{PROCESSID}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>

            <tl:Column
                id="IdColumnPrivilegeIdRoles"
                sortProperty="PRIVILEGEID"
                width="10rem"
                autoResizable="true"
                resizable="true"
            >
                <m:Label
                    id="IdLabelPrivilegeIdRoles"
                    text="ID Privilegio"
                />
                <tl:template>
                    <m:Text
                        id="IdTextPrivilegeIdRoles"
                        text="{PRIVILEGEID}"
                        wrapping="false"
                    />
                </tl:template>
            </tl:Column>
        </tl:columns>
    </tl:Table>
</mvc:View>
